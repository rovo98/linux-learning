CFLAGS=-Wall -g

object = for_loop hello sizeof \
	formatted_printing more_variables_and_some_math \
	sizes_and_arrays structure_of_a_program \
	types_of_variables

all:
	cc for_loop.c -o for_loop
	cc hello.c -o hello
	cc sizeof.c -o sizeof
	cc formatted_printing.c -o formatted_printing
	cc more_variables_and_some_math.c -o more_variables_and_some_math
	cc sizes_and_arrays.c -o sizes_and_arrays
	cc structure_of_a_program.c -o structure_of_a_program
	cc types_of_variables.c  -o types_of_variables

clean:
	rm -f $(object)
